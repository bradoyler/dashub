 <div class="card">
      <a class="issue-number" {{bind-attr href=html_url}} target="blank"> #{{number}} </a>
      <time class="meta">updated {{format-date updated_at}}</time>
      <h6><i></i> {{title}} </h6>
      <p class="meta">
      	<img {{bind-attr src=user.avatar_url}} height='30'>  
      	<a {{bind-attr href='user.url'}}>@{{user.login}}</a>     
            {{#if assignee}}
              =>  <a {{bind-attr href='assignee.url'}}>@{{assignee.login}}</a>
            {{/if}}  
      </p>
      <span class="label">{{labels.[0].name}} {{milestone.title}}</span>
      <span class="meta"><i></i>{{comments}}</span>

      {{#if pull_request.html_url}}
      <span class="meta"><i></i>
            <a {{bind-attr href=pull_request.html_url}} target="blank">PR</a>
      </span>
      {{/if}}
</div>
