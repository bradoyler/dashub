<div class="unit size1of3 cap-width">
  <section class="stream">
    <header class="stream-header">
      <h3 class="h5 stream-title">Pull Requests </h3>
      <ul class="filter-bar">
        <li><a href="#" {{action 'filteryours'}}>Yours <span class="badge">{{yours.length}}</span></a></li>
        <li><a href="#" {{action 'getall'}}>All <span class="badge">{{length}}</span></a></li>
      </ul>
    </header>
    <div class="card-list">
      {{#each}}
        {{render issuecard this}}
      {{/each}}
    </div>
  </section>
</div>
