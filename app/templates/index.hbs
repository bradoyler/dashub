{{#if reponame}}
    <header class="dashboard-header">
      <div class="container">
        <div class="line">
          <div class="unit">
            <h4 class="inline-block">
              Repository: <a {{bind-attr href=repourl}} target="blank">{{reponame}}</a>
            </h4>
            {{#link-to 'settings' class='button'}}Change{{/link-to}}
            <a class="button" href=""> Refresh</a>
          </div>
        </div>
      </div>
    </header>
{{/if}}

{{#if username}}
  {{#unless reponame}}
    <div class="container">
      <div class="line">
        <div class="unit">
          {{#link-to 'settings' class='button'}}Set Repo{{/link-to}}
        </div>
      </div>
    </div>
  {{/unless}}
{{/if}}

<div class="container">
  {{#if reponame}}
    {{render openissues}}
    {{render pulls}}
    {{render closedissues}}
  {{/if}}
</div>