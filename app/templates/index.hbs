

{{#if reponame}}
    <header class="dashboard-header">
      <div class="container">
        <div class="line">
          <div class="unit">
            <h4>
              Repository: <a {{bind-attr href=repourl}} target="blank">{{reponame}}</a>
              {{#link-to 'settings' class='button'}}Change{{/link-to}}
              <a class="button" href="/"> Refresh</a>
            </h4>
          </div>
        </div>
      </div>
    </header>
{{/if}}

{{#if username}}
  {{#unless reponame}}
    {{#link-to 'settings' class='button'}}Set Repo{{/link-to}}
  {{/unless}}
{{/if}}

<div class="container">
  {{#if reponame}}
    {{render openissues}}
    {{render pulls}}
    {{render closedissues}}
  {{/if}}
</div>