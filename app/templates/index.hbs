<h4>All issues for repo <a href="https://github.com/bradoyler/gitflow/issues" target="blank">bradoyler/gitflow</a></h4>
<style type="text/css">
 .card-issue {
 	background-color: #eee;
 	margin: 4px;
 }

 .card-issue-title {
 	margin: 3px;
 }

 .stream-milestone{
 	float: left;
 	max-width: 320px;
 	background-color: #ccc;
 	margin-left: 12px;
 }

 .stream-title {
 	margin: 6px;
 }

 .card-issue-next{
 	float: right;
 }

 .card-issue-back{
 	float: left;
 }
</style>

<div class="stream-milestone">
  <h4 class="stream-title">Backlog</h4>
  {{#each backlog}}
    <div class="card-issue">
       <div class="card-issue-number"> #{{number}} </div> 
        <h5 class="card-issue-title"> {{title}} </h5>
        <span>[{{labels.[0].name}} {{milestone.title}}]</span>
        <div class="card-issue-next"><a href="#"> -> </a></div>
    </div>
  {{/each}}
   <div class="stream-new-card"><a href="#">New [+]</a></div>
</div>

<div class="stream-milestone">
  <h4 class="stream-title">Current Sprint</h4>
  {{#each currentsprint}}
    <div class="card-issue">
       <div class="card-issue-number"> #{{number}} </div> 
        <h5 class="card-issue-title"> {{title}} </h5>
        <span>[{{labels.[0].name}} {{milestone.title}}]</span>
       	<div class="card-issue-back"><a href="#"> <- </a></div>
        <div class="card-issue-next"><a href="#"> -> </a></div>
    </div>
  {{/each}}
   <div class="stream-new-card"><a href="#">New [+]</a></div>
</div>


<div class="stream-milestone">
  <h4 class="stream-title">Closed issues</h4>
  {{#each closedissues}}
    <div class="card-issue">
       <div class="card-issue-number"> #{{number}} </div> 
        <h5 class="card-issue-title"> {{title}} </h5>
        <span>[{{labels.[0].name}} {{milestone.title}}]</span>
        <div class="card-issue-back"><a href="#"> <- </a></div>
    </div>
  {{/each}}
</div>